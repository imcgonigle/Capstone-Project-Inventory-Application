<div class="container">
	<h1>Update Info</h1>
	<hr>
	<form id="update_user" onsubmit="/user/update/" method="post">

		<div class="form-group">
	    <label for="email1">Email address</label>
	    <input name="email" type="email" class="form-control" id="email1" aria-describedby="emailHelp" placeholder="Enter email" value="{{user.email}}">
	    <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
	  </div>

	  <div class="form-group">
	    <label for="about">About</label>
	    <textarea name="about" class="form-control" id="bio" rows="3" placeholder="Enter a little of about yourself">{{user.about}}</textarea>
	  </div>

	  <button type="submit" class="btn btn-primary">Save</button>
	</form>
</div>
