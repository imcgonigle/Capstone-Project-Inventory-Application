<link rel="stylesheet" href="/stylesheets/dashboard.css">
<main class="h-100">
	<div class="container-fluid h-100">
		<div class="row h-100">
					<div id="navbarResponsive" class="dashboard-controls col-md-2 col-lg-2 collapse navbar-toggleable-sm">
				<div class="container-fluid">
						<div class="row dash-controls-title text-xs-center">
							<div class="col-sm-3 col-md-12">
								<p>Settings</p>
							</div>
						</div>
						<div class="row">
							<a class=nav-link href="/dashboard/">
								<div class="dashboard-control col-sm-12">
									<i class="fa fa-home fa-lg" aria-hidden="true"> </i> Home
								</div>
							</a>

								<a class=nav-link href="/dashboard/collections">
									<div class="dashboard-control col-sm-12">
										<i class="fa fa-th fa-lg" aria-hidden="true"></i> Inventory
									</div>
								</a>

							</div>

							{{!--Start of settings and help row--}}
							<div class="row dash-control-settings">
									<a class=nav-link href="/dashboard/settings">
										<div class="dashboard-control col-sm-3 offset-sm-3 offset-md-0 col-md-12">
											<i class="fa fa-gear fa-lg" aria-hidden="true"> </i> Settings
										</div>
									</a>
							</div>
							{{!--End of settings row--}}

					</div>
				</div>
			<div class="h-100 dashboard-view col-md-10">
				<div class="container">
					<div class="row">
            <div class="col-lg-6">
              <h2> <img src="{{ user.photo_url }}" alt="Users photo"> {{ user.first_name }} {{ user.last_name }}</h2>
            <hr> 
            <form action="/user/update" method="post">
              <div class="form-group">
                <label for="email">Email</label>
                <input type="email" class="form-control" aria-describedby="emailHelp" name="email" placeholder="Email Address..." value="{{ user.email }}">
                <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
              </div>
							<div class="form-group">
                <label for="city">City/Zip</label>
                <input type="text" class="form-control" name="city" placeholder="Denver, CO" value="{{ user.city }}">
              </div>

              <button type="submit" class="btn btn-primary">Update Profile</button>
            </form>
            </div>
						
					</div>
				</div>
			</div>

		</div>


	</div>
</main>
