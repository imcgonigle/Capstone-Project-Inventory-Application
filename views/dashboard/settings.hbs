<link rel="stylesheet" href="/stylesheets/dashboard.css">
<main class="h-100">
	<div class="container-fluid h-100">
		<div class="row h-100">
			<div class="dashboard-controls col-lg-2 h-100">
				<div class="container-fluid">
					<div class="control-title row">
						<div class="col-xs-12">
							<h4><a href="/dashboard">Controls</a></h4>
						</div>
					</div>
					<div class="row">
						<div class="col-xs-12">
							<a class=nav-link href="/dashboard/"><i class="fa fa-tachometer fa-lg" aria-hidden="true"></i> Dashboard</a>
						</div>
					</div>
					<div class="row">
						<div class="col-xs-12">
							<a class=nav-link href="/dashboard/collections"><i class="fa fa-th-large fa-lg" aria-hidden="true"></i> Collections</a>
						</div>
					</div>
					<hr>
					<div class="row">
						<div class="col-xs-12">
							<a class=nav-link href="/dashboard/settings"><i class="fa fa-gear fa-lg" aria-hidden="true"></i> Settings</a>
						</div>
					</div>
				</div>
			</div>
			<div class="h-100 dashboard-view col-lg-10">
				<div class="container">
					<div class="row">
            <div class="col-lg-6">
              <h2> <img src="{{ user.photo_url }}" alt="Users photo"> {{ user.first_name }} {{ user.last_name }}</h2>
            <hr> 
            <form action="/user/update" method="post">
              <div class="form-group">
                <label for="email">Email</label>
                <input type="email" class="form-control" aria-describedby="emailHelp" name="email" placeholder="Email Address..." value="{{ user.email }}">
                <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
              </div>
							<div class="form-group">
                <label for="city">City/Zip</label>
                <input type="text" class="form-control" name="city" placeholder="Denver, CO" value="{{ user.city }}">
              </div>

              <button type="submit" class="btn btn-primary">Update Profile</button>
            </form>
            </div>
						
					</div>
				</div>
			</div>

		</div>


	</div>
</main>
