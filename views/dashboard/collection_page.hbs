<main class="h-100">
	<div class="container-fluid h-100">
		<div class="row h-100">
			<div class="dashboard-controls col-lg-2 h-100">
				<div class="container-fluid">
					<div class="control-title row">
						<div class="col-xs-12">
							<h4><a href="/dashboard">Controls</a></h4>
						</div>
					</div>
					<div class="row">
						<div class="col-xs-12">
							<a class=nav-link href="/dashboard/"><i class="fa fa-tachometer fa-lg" aria-hidden="true"></i> Dashboard</a>
						</div>
					</div>
					<div class="row">
						<div class="col-xs-12">
							<a class=nav-link href="/dashboard/collections"><i class="fa fa-th-large fa-lg" aria-hidden="true"></i> Collections</a>
						</div>
					</div>
          <hr>
					<div class="row">
						<div class="col-xs-12">
							<a class=nav-link href="/dashboard/settings"><i class="fa fa-gear fa-lg" aria-hidden="true"></i> Settings</a>
						</div>
					</div>
				</div>
			</div>
			<div class="h-100 dashboard-view col-lg-10">
				<div class="container">
          <div class="row">
            <div class="col-lg-10">
              <span> {{ collection.name }}</span>
            </div>
            <div class="col-lg-2">
              <span>Items: {{ collection.item_count}} </span>
							<a class="collection-dropdown" href="#" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
									<i class="fa fa-ellipsis-v fa-lg " aria-hidden="true"></i>
								</a>
								<div class="dropdown-menu">
					        <a class="dropdown-item disabled" href="/dashboard/collection/update">Rename</a>
									<div class="dropdown-divider"></div>
					        <a class="text-danger dropdown-item" data-toggle="modal" data-target="#delete-collection-modal" href="#">Delete</a>
					      </div>
            </div>
						<div cass="col-lg-1">
							
						</div>
          </div>
          <hr>
					<div class="row">
						{{#each items}}
						<div class="col-lg-3">
							<div class="card text-xs-center">
								<div class="card-header">
									<a href="/dashboard/collection/{{this.id}}"> {{this.name}} </a>
								</div>
								<img class="card-img-top card-img" src="{{ this.thumbnail_url }}" alt="Collection thumbnail">
								<div class="card-block">
									<p class="card-text">{{this.description}}</p>
								</div>
								<div class="card-footer text-muted">
									items: {{ this.item_count }}
								</div>
							</div>
						</div>
						{{/each}}
					</div>
					<div class="row">
						<div class="col-lg-1 offset-lg-10">
							<a class="new-collection" data-toggle="modal" data-target="#add-item-modal" href="#">
								<i class="fa fa-plus fa-2x" aria-hidden="true"></i>
							</a>
							<div class="modal fade" id="add-item-modal">
								<div class="modal-dialog" role="document">
									<div class="modal-content">
										<div class="modal-header">
											<button type="button" class="close" data-dismiss="modal" aria-label="Close">
												<span aria-hidden="true">&times;</span>
											</button>
											<h4 class="modal-title">New Item</h4>
										</div>
										<div class="modal-body">
											<form id="new-item-form" action="item/add" method="POST" enctype="multipart/form-data">
												<div class="form-group">
													<label for="thumbnail">Item Image</label>
													<input type="file" class="form-control-file" name="thumbnail" id="thumbnail" aria-describedby="fileHelp">
												</div>
                        <div class="form-group">
													<label for="name">Name</label>
													<input class="form-control" type="text" name="name" placeholder="Item name">
												</div>
                        <div class="form-group">
													<label for="brand">Brand</label>
													<input class="form-control" type="text" name="brand" placeholder="Nike">
												</div>
												<div class="form-group">
													<label for="description">Description</label>
													<textarea class="form-control" name="description" placeholder="Conditions, price, or anything else"></textarea>
												</div>
											</form>
										</div>
										<div class="modal-footer">
											<button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
											<button type="submit" form="new-item-form" class="btn btn-primary">Add</button>
										</div>
									</div><!-- /.modal-content -->
								</div><!-- /.modal-dialog -->
							</div><!-- /.modal -->

					</div>
				</div>
			</div>

		</div>


	</div>
</main>

<div class="modal fade" id="delete-collection-modal">
		<div class="modal-dialog" role="document">
			<div class="modal-content">
				<div class="modal-header">
					<button type="button" class="close" data-dismiss="modal" aria-label="Close">
						<span aria-hidden="true">&times;</span>
					</button>
					<h4 class="modal-title">Are you sure?</h4>
				</div>
				<div class="modal-body">
					<form id="delete-collection-form" action="/dashboard/collection/delete/{{collection.id}}" method="POST">
						<div class="form-group">
							<label for="name">Type the name of the collection to delete</label>
							<input class="form-control" type="text" name="name">
						</div>
					</form>
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
					<button type="submit" form="delete-collection-form" class="btn btn-danger">Delete</button>
				</div>
			</div><!-- /.modal-content -->
		</div><!-- /.modal-dialog -->
	</div><!-- /.modal -->

